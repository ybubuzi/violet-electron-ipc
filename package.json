{
  "name": "violet-electron-ipc",
  "version": "0.1.0",
  "description": "An Electron application with Vue and TypeScript",
  "main": "./out/main/index.js",
  "author": "example.com",
  "homepage": "https://electron-vite.org",
  "scripts": {
    "prepare": "node config/scripts/prepareVscode.cjs && npx simple-git-hooks",
    "format": "prettier --write .",
    "lint": "eslint -c ./config/editor/eslint.config.mjs --fix",
    "typecheck:node": "tsc --noEmit -p config/typescript/tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p config/typescript/tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "chcp 65001 && electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win --config ./config/electron-build/electron-builder.yml",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "build:tiny:win": "npm run build && node ./config/electron-build/split-asar-builder.mjs"
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "node config/scripts/verifyCommit.cjs $1"
  },
  "lint-staged": {
    "*.{js,json,ts,tsx,vue,less,css}": [
      "eslint -c ./config/editor/eslint.config.mjs --fix",
      "prettier --config ./config/editor/.prettierrc.yaml --parser=typescript --ignore-path ./config/editor/.prettierignore --write ./src"
    ]
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "electron-conf": "^1.3.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@types/node": "^20.0.0",
    "@vitejs/plugin-vue": "^6.0.3",
    "colors": "^1.4.0",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12",
    "electron-vite": "^5.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-vue": "^10.0.0",
    "globals": "^17.0.0",
    "js-yaml": "^4.1.0",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "simple-git-hooks": "^2.13.0",
    "typescript": "^5.8.3",
    "vite": "^7.3.1",
    "vue": "^3.5.26",
    "vue-eslint-parser": "^10.1.3",
    "vue-tsc": "^2.2.8"
  },
  "workspaces": [
    "./packages/*"
  ]
}
